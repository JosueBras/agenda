<resources>

    <style name="Theme.Contacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/deep_orange_500</item>
        <item name="colorPrimaryVariant">@color/deep_orange_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/deep_orange_500</item>
        <item name="colorSecondaryVariant">@color/deep_orange_500</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Contacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Contacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Contacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
